#version 400 core
#extension GL_ARB_shading_language_420pack : require

layout(location = 0) in vec3 pos;
layout(location = 1) in vec3 normal;
layout(location = 2) in vec2 uv;

out vec3 uvs;

uniform mat4 view;
uniform mat4 proj;

void main()
{
	uvs = pos;

	//remove translation
	mat4 rot = mat4(mat3(view));
	gl_Position = (proj * rot * vec4(pos, 1.0)).xyww;
}